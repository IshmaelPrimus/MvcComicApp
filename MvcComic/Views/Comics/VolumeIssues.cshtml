@model VolumeIssuesViewModel

<h2>@Model.VolumeTitle</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Issue Number</th>
            <th>Image</th>
            <th>Select</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model.Issues)
        {
            <tr>
                <td>@issue.Title</td>
                <td>@issue.IssueNumber</td>
                <td><img src="@issue.ImageUrl" alt="@issue.Title" width="50" /></td>
                <td>
                    <form asp-action="AddSelectedIssue" method="post">
                        <input type="hidden" name="volumeTitle" value="@Model.VolumeTitle" />
                        <input type="hidden" name="title" value="@issue.Title" />
                        <input type="hidden" name="issueNumber" value="@issue.IssueNumber" />
                        <input type="hidden" name="imageUrl" value="@issue.ImageUrl" />
                        <label for="description">Description:</label>
                        <textarea name="description" rows="4" cols="50">@issue.Description</textarea>
                        <input type="number" name="quantity" min="1" value="1" />
                        <button type="submit" class="btn btn-primary">Select</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

