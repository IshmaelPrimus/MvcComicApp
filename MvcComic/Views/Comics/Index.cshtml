@model MvcComic.Models.ComicPublisherViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Comics" asp-action="Index" method="get">
    <p>

        <select asp-for="ComicPublisher" asp-items="Model.Publishers">
            <option value="">All</option>
        </select>

        <label>Title: <input type="text" asp-for="SearchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comics![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comics![0].Issue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comics![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comics![0].Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comics![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comics![0].Grading)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Comics!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Issue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grading)
                </td>>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>