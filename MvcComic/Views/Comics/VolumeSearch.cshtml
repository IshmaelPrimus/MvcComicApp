@model MvcComic.Models.VolumeIssuesViewModel

@{
    ViewData["Title"] = "Volume Search";
}

<h1>Volume Search</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="GetVolumeIssues" method="get">
    <div class="form-group">
        <label for="volumeName">Volume Name</label>
        <input type="text" class="form-control" id="volumeName" name="volumeName" required />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<h3>Volume: @Model.VolumeTitle</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueNumber)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model.Issues)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => issue.Volume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => issue.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => issue.IssueNumber)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(issue.ImageUrl))
                    {
                        <img src="@issue.ImageUrl" alt="Comic Image" style="max-width: 100px; max-height: 100px;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@issue.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@issue.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@issue.Id">Delete</a> |
                    <a asp-action="Select" asp-route-id="@issue.Id">Select</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}
